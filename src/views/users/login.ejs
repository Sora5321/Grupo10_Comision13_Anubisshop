<!DOCTYPE html>
<html lang="es">

    <%- include('../partials/headb')  %> 

<body>
    <%- include('../partials/header') %> 
   
    <section class="login">     
        
        <!-- <main> -->

        <h3>Login</h3>
            
            <form action="/usuarios/login" method="POST" id="formLogin">
                    
                    <div class="input-container">
                        <label for="email"><h2>E-mail</h2></label>
                        <input type="email" id="email" name="email" class="input-style" placeholder="Ingrese su E-mail" id="email" value="<%= locals.old && old.email %>" >
                        <% if (locals.errors && errors.email) { %>
                            <small class="text-danger"><%= errors.email.msg %></small>
                        <% } %>
                        <span class="error" id="emailErrors" style="color: red"></span>
                    </div>
                    
                    <div class="input-container">
                        <label for="password"><h2>Contraseña</h2></label>
                        <input type="password" name="password" id="pass" class="input-style" placeholder="Ingrese su contraseña" id="password" >
                        <% if (locals.errors && errors.password) { %>
                            <small class="text-danger"><%= errors.password.msg %></small>
                        <% } %>
                        <span class="error" id="passErrors" style="color: red"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" name="remember" type="checkbox" id="remember">
                        <label class="form-check-label" for="remember">
                            Recordarme
                        </label>
                    </div>
                    <% if (locals.errors && errors.custom) { %>
                        <small class="text-danger"><%= errors.custom.msg %></small>
                    <% } %>
                    <div class="contraseña">
                        <a href="">¿Olvidaste tu contraseña?</a>
                    </div>
                    
                    <span style="color:red ;" id="submitLoginErrors"></span>
                    <div class="btn-container">
                        <button class="submit" type="submit">Iniciar sesión</button>
                        <!-- <span id="submitErros" style="color: red"></span> -->
                    </div> 
                    <i>¿No tienes una cuenta? <a href="register">Crear cuenta</a></i> 

            </form>
    </section>      
    
    <!--  </main> -->

    <%- include('../partials/footer')  %> 
    <%- include('../partials/scripts')  %>
</body>
</html>